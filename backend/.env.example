# MongoDB Connection
# For MongoDB Atlas (Cloud):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/your_database_name?retryWrites=true&w=majority
# For Local MongoDB:
# MONGO_URI=mongodb://127.0.0.1:27017/your_database_name
MONGO_URI=your_mongodb_connection_string

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Client URL for CORS
CLIENT_URL=http://localhost:5173

# Email Configuration (if using nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=your_name <your_email@gmail.com>

# Google OAuth Configuration
GOOGLE_CLIENT_ID=321751017323-ndndm0q59srsugqcvth0r74ib0ikcu9f.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
SESSION_SECRET=your_session_secret_key
